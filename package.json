{
    "name": "sample-angularjs-migration",
    "version": "0.1.0",
    "description": "sample application to demonstrate angularjs migration",
    "nyc": {
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [
            "src/**/*.interface.ts",
            "src/**/test-utilities/**/*.ts",
            "src/**/*.spec.ts"
        ],
        "extension": [
            ".ts"
        ],
        "reporter": [
            "text",
            "text-summary"
        ],
        "require": [
            "ts-node/register"
        ],
        "sourceMap": true,
        "instrument": true,
        "all": true
    },
    "scripts": {
        "lint": "tslint -c tslint.json 'src/**/*.ts'",
        "clean": "rm -rf dist",
        "build": "npm run lint && tsc && cp -r config dist/backend && cp -r config dist/frontend && copyfiles -e **/*.{ts,js} -u 1 src/frontend/**/*.* dist && webpack",
        "rebuild": "npm run clean && npm run build",
        "test-int": "npm run rebuild && set NODE_ENV=testing&& set DB_USER=testdb2019&& set DB_PASSWORD=testdb2019&& nyc mocha --opts \"mocha.opts\" \"src/**/integration-tests/**/*.spec.ts\"",
        "test-unit": "npm run rebuild && nyc mocha --opts \"mocha.opts\" --exclude \"src/**/integration-tests/**/*.spec.ts\" \"src/**/*.spec.ts\"",
        "test-app": "karma start karma.conf.js",
        "test": "npm run rebuild && set NODE_ENV=testing&& set DB_USER=testdb2019&& set DB_PASSWORD=testdb2019&& nyc mocha --opts \"mocha.opts\" \"src/**/*.spec.ts\"",
        "frontend-nodemon": "nodemon --verbose --watch src/frontend -e js,html,css --exec \"copyfiles -e **/*.{ts,js} -u 1 src/frontend/**/*.* dist && webpack && npm run start-server\"",
        "frontend-dev": "npm run rebuild && concurrently \"npm run start-backend\" \"npm run frontend-nodemon\"",
        "backend-dev": "nodemon --verbose --watch src/backend -e ts --exec \"npm run rebuild && npm run start-backend\"",
        "start-collector": "cd dist/backend && node data-collector/app",
        "start-api": "cd dist/backend && node apis/v1/app",
        "start-server": "cd dist/frontend && node server",
        "start-backend": "set NODE_ENV=testing&& set DB_USER=testdb2019&& set DB_PASSWORD=testdb2019&& concurrently \"npm run start-collector\" \"npm run start-api\"",
        "start": "npm run rebuild && concurrently \"npm run start-collector\" \"npm run start-api\" \"npm run start-server\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/YiZhang-Paul/Angularjs-Angular-Migration.git"
    },
    "author": "Yi Zhang",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/YiZhang-Paul/Angularjs-Angular-Migration/issues"
    },
    "homepage": "https://github.com/YiZhang-Paul/Angularjs-Angular-Migration#readme",
    "dependencies": {
        "@uirouter/angularjs": "^1.0.22",
        "angular": "^1.7.7",
        "angular-animate": "^1.7.6",
        "angular-aria": "^1.7.6",
        "angular-material": "^1.1.12",
        "angular-toastr": "^2.1.1",
        "axios": "^0.18.0",
        "bcryptjs": "^2.4.3",
        "concurrently": "^4.1.0",
        "config": "^3.0.1",
        "cors": "^2.8.5",
        "express": "^4.16.4",
        "express-validator": "^5.3.1",
        "jsonwebtoken": "^8.4.0",
        "mongoose": "^5.4.8",
        "redis": "^2.8.0",
        "validator": "^10.11.0",
        "xss": "^1.0.3"
    },
    "devDependencies": {
        "@babel/core": "^7.2.2",
        "@babel/plugin-proposal-class-properties": "^7.3.0",
        "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
        "@babel/plugin-proposal-throw-expressions": "^7.2.0",
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@babel/polyfill": "^7.2.5",
        "@babel/preset-env": "^7.3.1",
        "@types/axios": "^0.14.0",
        "@types/chai": "^4.1.7",
        "@types/config": "0.0.34",
        "@types/cors": "^2.8.4",
        "@types/express": "^4.16.1",
        "@types/express-validator": "^3.0.0",
        "@types/mocha": "^5.2.5",
        "@types/mongodb": "^3.1.19",
        "@types/mongoose": "^5.3.12",
        "@types/node": "^10.12.19",
        "@types/redis": "^2.8.10",
        "@types/sinon": "^7.0.5",
        "@types/superagent": "^3.8.6",
        "@types/validator": "^10.9.0",
        "angular-mocks": "^1.7.7",
        "babel-loader": "^8.0.5",
        "chai": "^4.2.0",
        "chai-http": "^4.2.1",
        "copyfiles": "^2.1.0",
        "css-loader": "^2.1.0",
        "file-loader": "^3.0.1",
        "istanbul-instrumenter-loader": "^3.0.1",
        "karma": "^4.0.0",
        "karma-chai": "^0.1.0",
        "karma-chrome-launcher": "^2.2.0",
        "karma-coverage": "^1.1.2",
        "karma-coverage-istanbul-reporter": "^2.0.4",
        "karma-mocha": "^1.3.0",
        "karma-mocha-reporter": "^2.2.5",
        "karma-ng-html2js-preprocessor": "^1.0.0",
        "karma-remap-coverage": "^0.1.5",
        "karma-sinon": "^1.0.5",
        "karma-sourcemap-loader": "^0.3.7",
        "karma-webpack": "^3.0.5",
        "mocha": "^5.2.0",
        "ng-annotate": "^1.2.2",
        "ng-annotate-webpack-plugin": "^0.3.0",
        "nodemon": "^1.18.9",
        "nyc": "^13.1.0",
        "sinon": "^7.2.3",
        "source-map-support": "^0.5.10",
        "style-loader": "^0.23.1",
        "ts-node": "^7.0.1",
        "tslint": "^5.12.1",
        "tslint-microsoft-contrib": "^6.0.0",
        "typescript": "^3.3.1",
        "url-loader": "^1.1.2",
        "webpack": "^4.29.0",
        "webpack-cli": "^3.2.1"
    }
}
